#!/bin/bash

query_device() {
	for d in 0 1 2 3
	do
		dmem="$(nvidia-smi -q -i ${d} -d Memory |grep -A4 GPU | grep Used | grep -Eo '[0-9]{1,5}')"
		if (($dmem < 10)); then
		    device=${d}
		fi
	done
}

get_device() {
	unset device
	while [[ -z "${device}" ]]
	do
		query_device
		if [[ -z "${device}" ]]; then
			echo "All devices are busy, sleeping for 10s"
			sleep 10
		fi
	done
}

while getopts a: flag
do
    case "${flag}" in
        a) a=(${OPTARG//-/ });;
    esac
done

for ((exp_num = ${a[0]}; exp_num <= ${a[1]}; exp_num++ )); do
	get_device
	CUDA_VISIBLE_DEVICES=$((device)) nohup bash -c "python train.py \
		--ep=500 \
		--dtype='cifar10' \
		--print_freq=500 \
		--exp_num=${exp_num} && \
	python invest_dl_prob.py \
		--exp_num=${exp_num} \
		--dtype='cifar10'" > jobs/${exp_num}.out 2>&1 &
	sleep 30
done
